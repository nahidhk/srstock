<br>
<div>
    <form action="#" method="post">
        <blockquote>
            <div>
                <strong>Upload a Product image 3*3</strong>
                <hr>
                <div class="flex">
                    <label for="img1">
                        <div class="upbox">
                           <i class=" upicon fa-solid fa-cloud-arrow-up"></i>
                            <span class="uptxt">Add images 3*1</span>
                        </div>
                        <input class="inputimgcolor" type="text" name="img1color" placeholder="Image 3*1 Color"
                            required>
                    </label>
                    <input class="vcc" type="file" id="img1" name="img1" accept="image/*" required>
                   
                <!-- add more button -->
                <div class="upbox">
                          <i class=" upicon fa-solid fa-plus"></i>
                            <span class="uptxt">Add More img</span>
                        </div>
                      
                </div>


                </div>


                <div>
                    <strong>
                        Product information
                    </strong>
                    <hr>
                    <div>
                        <input class="input" type="text" name="productname" placeholder="Product Name" required><br>
                        <input class="input" type="text" name="productdescription" placeholder="Product Description"
                            required>
                        <br>
                        <p>Product size</p>
                        <input type="checkbox" name="xxl" id="" value="XXL">
                        <label for="xxl">XXL</label> <br>
                        <input type="checkbox" name="xl" id="" value="XL">
                        <label for="xl">XL</label><br>
                        <input type="checkbox" name="l" id="" value="L">
                        <label for="l">L</label><br>
                        <input type="checkbox" name="m" id="" value="M">
                        <label for="m">M</label><br>
                        <input type="checkbox" name="s" id="" value="S">
                        <label for="s">S</label><br>
                        <input type="checkbox" name="xs" id="" value="XS">
                        <label for="xs">XS</label>
                        <br>
                    </div>
                </div>
        </blockquote>
    </form>
</div>